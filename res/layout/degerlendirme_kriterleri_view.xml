<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<TextView
        android:id="@+id/degerlendirmeKriterleriHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="2sp"
        android:paddingTop="2sp"
        android:text="@string/degerlendirme_kriterleri_header"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/seperator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/degerlendirmeKriterleriHeader"
        android:background="@android:color/darker_gray" />

     <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fikirAciklamaLabel"
        android:layout_alignBottom="@+id/fikirAciklamaLabel"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:text="@string/katsayi" />

    <TextView
        android:id="@+id/fikirAciklamaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/seperator"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="12dp"
        android:text="@string/kriter_adi" />

      <View
        android:id="@+id/seperator2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/fikirAciklamaLabel"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp" />
    
    <ListView
        android:id="@+id/degerlendirmeKriterList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seperator2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp" >
    </ListView>
    
</RelativeLayout>
