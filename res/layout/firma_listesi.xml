<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/firmaListesiHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="2sp"
        android:paddingTop="2sp"
        android:text="@string/firma_listesi"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/seperator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/firmaListesiHeader"
        android:background="@android:color/darker_gray" />

    <ListView
        android:id="@+id/firmaListesiView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14sp"
        android:layout_marginRight="16sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/seperator2" >

    </ListView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fikirAciklamaLabel"
        android:layout_alignBottom="@+id/fikirAciklamaLabel"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:text="@string/firma_durum" />

    <TextView
        android:id="@+id/fikirAciklamaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/seperator"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="12dp"
        android:text="@string/firma_adi" />

      <View
        android:id="@+id/seperator2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/fikirAciklamaLabel"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp" />

</RelativeLayout>
