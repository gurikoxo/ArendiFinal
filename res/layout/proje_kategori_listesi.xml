<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/projeKategoriListesiHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="2sp"
        android:paddingTop="2sp"
        android:text="@string/proje_kategori_listesi_header"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/seperator"
        android:layout_width="fill_parent"
        android:layout_height="1sp"
        android:layout_below="@+id/projeKategoriListesiHeader"
        android:background="@android:color/darker_gray" />

    <View
        android:id="@+id/seperator2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/fikirAciklamaLabel"
        android:layout_below="@+id/fikirAciklamaLabel"
        android:layout_marginRight="14dp"
        android:background="@android:color/darker_gray" />

    <ListView
        android:id="@+id/projeKategoriListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seperator2"
        android:layout_alignRight="@+id/seperator2"
        android:layout_below="@+id/seperator2"
        android:layout_centerHorizontal="true" >
    </ListView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fikirAciklamaLabel"
        android:layout_below="@+id/seperator"
        android:layout_marginBottom="10dp"
        android:text="Humexis" />

    <TextView
        android:id="@+id/fikirAciklamaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="15dp"
        android:text="@string/kategori_adi" />

</RelativeLayout>